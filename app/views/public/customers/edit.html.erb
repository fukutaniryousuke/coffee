<div class="mt-5 container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="mb-5">会員情報編集</h2>

      <%= form_with model: @customer, url: customers_path(@customer) do |f| %>

        <div class="form-group row">
          <%= f.label :last_name, "氏名", class:"col-md-4" %>
          <%= f.text_field :last_name, class:"col-md-4 form-control" %>
          <%= f.text_field :first_name, class:"col-md-4 form-control" %>
        </div>

        <div class="form-group row">
          <%= f.label :last_name_kana, "フリガナ", class:"col-md-4" %>
          <%= f.text_field :last_name_kana, class:"col-md-4 form-control" %>
          <%= f.text_field :first_name_kana, class:"col-md-4 form-control" %>
        </div>

        <div class="form-group row">
          <%= f.label :postcode, "郵便番号", class:"col-md-4" %>
          <%= f.text_field :postcode, class:"col-md-4 form-control" %>
        </div>

        <div class="form-group row">
          <%= f.label :address, "住所", class:"col-md-4" %>
          <%= f.text_field :address, class:"col-md-8 form-control" %>
        </div>

        <div class="form-group row">
          <%= f.label :tel, "電話番号", class:"col-md-4" %>
          <%= f.text_field :tel, class:"col-md-4 form-control" %>
        </div>

        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class:"col-md-4" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-md-4 form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "編集を保存", class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>