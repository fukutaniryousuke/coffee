<div class="mt-5 container">
  <div class="row">
      <h2>My Page</h2>
        <div>
          登録情報 <%= link_to "編集する", edit_customers_path, class:"btn btn-outline-success btn-sm" %>
        </div>
          <table class="mt-3 table">
            <tr>
              <th>氏名</th>
              <td><%= @customer.last_name %> <%= @customer.first_name %></td>
            </tr>
            <tr>
              <th>フリガナ</th>
              <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
            </tr>
            <tr>
              <th>郵便番号</th>
              <td><%= @customer.postcode %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <th>電話番号</th>
              <td><%= @customer.tel %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= @customer.email %></td>
            </tr>
          </table>
          <div class="font-weight-bold">配送先　　<%= link_to "一覧を見る", shipping_addresses_path, class:"btn btn-primary" %></div
  </div>
</div>