<div class="mt-5 container">
  <div class="row">
    <div class="mx-auto">
      <h2>ジャンル一覧・登録</h2>
        <%= form_with model: @ganre, url: "/admin/ganres" do |f| %>
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name %>
        <%= f.submit "登録", class: "ml-3 btn btn-primary" %>
        <% end %>
        <table class="mt-3 table">
          <% @ganres.each do |ganre| %>
            <tr>
              <td>
                <%= ganre.name %>
              </td>
              <td>
                <%= link_to "編集", edit_admin_ganre_path(ganre.id), class: "btn btn-success btn-sm" %>
              </td>
            </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>