<div class="mt-5 container">
  <div class="row">
    <div class="mx-auto">
        <h2>ジャンル編集</h2>
        <%= form_with model: @ganre, url: admin_ganre_path(@ganre), method: :patch do |f| %>
        <%= f.label :name, "ジャンル名" %><br>
        <%= f.text_field :name, class:"mt-2" %><br>
        <%= f.submit "変更を保存", class:"mt-3 btn btn-secondary" %>
        <% end %>
    </div>
  </div>
</div>