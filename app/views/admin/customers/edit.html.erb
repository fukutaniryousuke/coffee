<div class="container">
<h2>会員情報編集</h2>

<%= form_with model: @customer, url: admin_customer_path(@customer) do |f| %>

  <div class="field">
    <%= f.label :last_name, "名前" %>
    <%= f.label :last_name, "(姓)" %>
    <%= f.text_field :last_name %>
    <%= f.label :first_name, "(名)" %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana, "フリガナ" %>
    <%= f.label :last_name_kana, "(セイ)" %>
    <%= f.text_field :last_name_kana %>
    <%= f.label :first_name_kana, "(メイ)" %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :postcode, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postcode %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :tel, "電話番号" %>
    <%= f.text_field :tel %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

</div>