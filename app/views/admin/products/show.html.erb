<div class="mt-5 container">
  <h2>商品詳細</h2>
    <div class="row">
      <%= image_tag @product.image, size:"500x500", class:"img-fluid col-md-4" %>
        <table class="table col-md-8">
          <tr>
            <th>商品名</th>
            <td><%= @product.name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= @product.introduction %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= @product.ganre.name %></td>
          </tr>
          <tr>
            <th>税込み価格</th>
            <td>¥ <%= @product.with_tax_price %> ( ¥ <%= @product.price %> )</td>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <td>
              <% if @product.is_active %>
               <span class="text-success">販売中</span>
              <% else %>
               販売停止中
              <% end %>
            </td>
          </tr>
        </table>
        <%= link_to "編集", edit_admin_product_path, class:"mt-3 ml-2 btn btn-success" %>
    </div>
</div>